{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cmakeExecutable": "cmake",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "environment": {
        "PATH": "$env{LLVM_ROOT}/bin${pathListSep}$penv{PATH}"
      },
      "cacheVariables": {
        "GODOT_VERBOSE": true
      }
    },
    {
      "name": "linuxbsd",
      "inherits": "base",
      "cacheVariables": {
        "GODOT_PLATFORM": "linuxbsd"
      }
    },
    {
      "name": "windows",
      "inherits": "base",
      "cacheVariables": {
        "GODOT_PLATFORM": "windows"
      }
    },
    {
      "name": "android",
      "inherits": "base",
      "cacheVariables": {
        "ANDROID_PLATFORM": "21",
        "GODOT_PLATFORM": "android"
      }
    }
  ]
}
